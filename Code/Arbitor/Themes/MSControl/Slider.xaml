                               StrokeThickness="{StaticResource basetheme.StrokeThickness1}" 
                               StrokeDashArray="{StaticResource basetheme.StrokeDashArray}" 
                               SnapsToDevicePixels="true" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

